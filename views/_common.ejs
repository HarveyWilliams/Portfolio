<!DOCTYPE html>
<html>
<head lang="en">
    <title><%= global.config.DEV === true ? "DEV | " : "" %><%= pageTitle %> | Harvey Williams</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <% if (typeof metaDescription !== 'undefined') { %>
        <meta name="description" content="<%= metaDescription %>" />
    <% } %>

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@harvzor"/>
    <meta name="twitter:title" content="<%= pageTitle %>" />
    <% if (typeof metaDescription !== 'undefined') { %>
        <meta name="twitter:description" content="<%= metaDescription %>" />
    <% } %>
    <% /*
        <meta name="twitter:image" content="/media/me-3.jpg" />
        <meta name="twitter:image:alt" content="Harvey Williams" />
    */ %>
    <% if (typeof ampCanonical !== 'undefined') { %>
        <link rel="amphtml" href="<%= ampCanonical %>" />
    <% } %>
    <% if (typeof canonical !== 'undefined') { %>
        <link rel="canonical" href="<%= canonical %>" />
    <% } %>
    <link rel="alternate" type="application/rss+xml" title="Harvey Williams" href="/rss" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link href="/css/main.css" rel="stylesheet" type="text/css">
    <% //<link href="//fonts.googleapis.com/css?family=Anonymous+Pro" rel="stylesheet" type="text/css"> %>
</head>
<body class="<%= page.controller %>-page">
    <div class="accessibility-toolbar">
        <% include partials/accessibility-toolbar %>
    </div>
    <aside class="nav">
        <% include partials/aside %>
    </aside>
    <a href="#" id="nav-open" class="diamond toggle" title="Show the sidebar."></a>
    <main id="content">
        <section class="content">
            <header class="breadcrumbs">
                <%if (locals.parentPages) { %>
                    <% parentPages.forEach(function(parentPage) { %>
                        <a href="<%= parentPage.href %>">
                            <%= parentPage.title %>
                        </a>
                        <span> / </span>
                    <% }); %>
                <% } %>
                <h1><%= pageTitle %></h1>
            </header>
            <%- body %>
        </section>
        <div class="spacer"></div>
        <footer>
            <span>&copy; Harvey Williams <%= helpers.getYear() %></span>
            <a class="song" href="/songs" title="My song of the moment"><%= songOfTheMoment().name %> - <%= songOfTheMoment().artist %></a>
        </footer>
    </main>
    <script src="/js/script.min.js"></script>
    <% if (config.DEV === false) { %>
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-89707735-1', 'auto');
            ga('send', 'pageview');
        </script>
    <% } %>
</body>
</html>

