<% posts.forEach(function(post) { %>
	<a href="/blog/<%= post.href %>" class="post-preview">
		<h2><%= post.title %></h2>
		<p>
			<%= post.summary %>
		</p>
		<div class="meta">
			<span class="meta-detail">Posted:</span> <%= helpers.friendlyDate(post.postDate) %>
		</div>
	</a>
<% }); %>
<div class="tags">
	<p>Filter by:</p>
	<% tags.forEach(function(tag) { %>
		<a class="tag<% if (currentTag == tag.name) { %> active<% } %>" href="/blog?tag=<%= tag.name %>">
			<div class="tag-inner">
				<div class="box tag-front">
					<%= tag.name %> (<%= tag.quantity %>)
				</div>
				<div class="box tag-back">
					<%= tag.name %> (<%= tag.quantity %>)
				</div>
			</div>
		</a>
	<% }); %>
</div>
